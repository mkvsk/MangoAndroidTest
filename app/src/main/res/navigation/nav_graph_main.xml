<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/user_profile_dest">

    <fragment
        android:id="@+id/auth_dest"
        android:name="com.example.mangoandroidtest.AuthFragment"
        android:label="">

        <action
            android:id="@+id/action_go_to_verify_code"
            app:destination="@id/verify_code_dest"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/verify_code_dest"
        android:name="com.example.mangoandroidtest.VerifyCodeFragment">
        <action
            android:id="@+id/action_go_to_register"
            app:destination="@id/register_dest"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@animator/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_go_to_user_profile"
            app:destination="@+id/user_profile_dest"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/register_dest"
        android:name="com.example.mangoandroidtest.RegisterFragment">

        <action
            android:id="@+id/action_go_to_user_profile"
            app:destination="@+id/user_profile_dest"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/user_profile_dest"
        android:name="com.example.mangoandroidtest.UserProfileFragment">

    </fragment>
</navigation>